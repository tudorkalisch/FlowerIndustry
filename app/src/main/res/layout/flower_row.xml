<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flower_cardView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="40dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/GeneralText"
            android:layout_marginTop="5dp"
            android:id="@+id/flower_row_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>
        <TextView
            style="@style/GeneralText"
            android:layout_marginTop="5dp"
            android:id="@+id/flower_row_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flower_row_description"
            android:textAlignment="center"/>
        <TextView
            style="@style/GeneralText"
            android:layout_marginTop="5dp"
            android:id="@+id/flower_row_deliver_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flower_row_price"
            android:textAlignment="center"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>